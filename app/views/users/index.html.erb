<div class="container">
  <div class="page-header">
    <h1>User List</h1>
  </div>
  <table class="table table-striped">
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Action</th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.role %></td>
      <td>
      <%= link_to 'Edit', edit_user_path(user) , :class=> "btn"%>
      <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete , :class=> "btn btn-danger"%></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New User', new_user_path, :class=>"btn btn-primary" %>
</div>
